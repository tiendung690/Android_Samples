<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="4dp" >

<ImageView
    android:id="@+id/ImageView_dialog_icon"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_margin="4dp" 
    android:scaleType="fitCenter" 
    android:src="@null" />

<TextView
    android:id="@+id/TextView_dialog_title"
    android:singleLine="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    style="?attr/dialogTitle" />

</LinearLayout>

<TextView
    android:id="@+id/TextView_dialog_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp" 
    style="?attr/dialogMessage" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp" >

<Button
    android:id="@+id/Button_dialog_no"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="4dp" 
    android:visibility="invisible"
    style="?attr/dialogButton" />

<Button
    android:id="@+id/Button_dialog_yes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_weight="1"
    android:layout_margin="4dp"
    style="?attr/dialogButton" />

</LinearLayout>

</LinearLayout>
