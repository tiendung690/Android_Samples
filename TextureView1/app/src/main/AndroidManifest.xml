<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ohwada.android.textureview1">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CameraActivity"
            android:label="@string/camera_activity" >
        </activity>

        <activity
            android:name=".Camera2Activity"
            android:label="@string/camera2_activity" >
        </activity>

        <activity
            android:name=".GLTriangleActivity"
            android:label="@string/gltriangle_activity" >
        </activity>

        <activity
            android:name=".CanvasActivity"
            android:label="@string/canvas_activity" >
        </activity>

        <activity
            android:name=".Canvas2Activity"
            android:label="@string/canvas2_activity" >
        </activity>

        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

    </application>

</manifest>